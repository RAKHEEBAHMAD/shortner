<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    integrity="sha512-k7TlF29s9uJatLTHarA3dMCB+Uq2euOElHwUPMstY9jMjUhq7bnJ/5xlHzt7f9gpNbzNuWweA2Bz+YVp0c8Z3Q=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="style.css" />
  <title>URL shortner</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand text-white" href="#">ShrinkIt</a>
      <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <i class="fa-sharp fa-solid fa-bars" style="color: #f0f2f4;"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link text-white" href="#" data-bs-toggle="modal" data-bs-target="#searchModal">Search</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="#">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="searchModalLabel">Search</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="search-form" role="search">
            <div class="input-group">
              <form id="search-form" class="d-flex ms-auto mb-2 mb-lg-0" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search"
                  autocomplete="off" class="search-input" />
              </form>
            </div>
        </div>
        </form>
      </div>
    </div>
  </div>
  </div>


  <div class="container-fluid">
    <form action="\url" method="post" class="mt-5">
      <input type="text" name="fullurl" placeholder="Enter full link" autocomplete="off" required />
      <button type="submit" class="shrink-btn">shrink</button>
    </form>
    <% if (error) { %>
      <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="errorModalLabel">Error</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p class="error-message">
                <%= error %>
              </p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <% } %>
        <div class="card-container">
          <% urls.forEach((shortUrl, index)=> { %>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Full URL</h5>
                <p class="card-text full-link">
                  <a href="<%= shortUrl.full %>" target="_blank">
                    <%= shortUrl.full %>
                  </a>
                </p>
                <h5 class="card-title">Short URL</h5>
                <p class="card-text">
                  <span class="short-link">
                    <a href="<%= shortUrl.full %>" target="_blank">
                      <%= host + '/' + shortUrl.short %>
                    </a>
                  </span>
                  <button class="copy-btn" style="border: none;"><i class="fas fa-copy p-2"></i></button>
                </p>
                <h5 class="card-title">Clicks:</h5>
                <p class="card-text">
                  <%= shortUrl.clicks %>
                </p>
                <form action="/url/<%= shortUrl._id %>?_method=DELETE" method="post" class="del-form">
                  <div class="text-center">
                    <button class="del-btn btn btn-danger" type="submit">Delete</button>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                      data-bs-target="#qrCodeModal<%= index %>">
                      View QR Code
                    </button>
                  </div>
                </form>

              </div>
            </div>
            <div class="modal fade" id="qrCodeModal<%= index %>" tabindex="-1"
              aria-labelledby="qrCodeModalLabel<%= index %>" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="qrCodeModalLabel<%= index %>">QR Code</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body text-center">
                    <img src="<%= qrCodes[index] %>" alt="QR Code" />
                  </div>
                  <div class="modal-footer d-flex">
                    <a href="<%= qrCodes[index] %>" download="qr_code_<%= index + 1 %>.png"
                      class="btn btn-primary justify-content-center">Download</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>

        </div>
  </div>
  <script src="https://kit.fontawesome.com/a894369998.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
    integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
    integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
    crossorigin="anonymous"></script>
  <script src="script.js"></script>
</body>

</html>