<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            color: white;
            text-decoration: none;
        }

        header {
            position: sticky;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            height: 100px;
            background-color: white;
            /* border: 2px solid red; */
        }



        /* navbar section */
        .nav-bar {
            position: sticky;
            top: 0;
            left: 0;
            z-index: 100;
            background-color: #1f1f38;
            border-bottom: .5px solid #ffffff52;
            line-height: 5rem;
            display: flex;
            justify-content: space-around;
        }

        .right-nav {
            display: flex;
            list-style: none;
        }

        .name {
            font-size: 2.2rem;
        }

        .name:hover {
            animation: shake 1.5s ease;
        }

        .nav-bar li a {
            padding: 0.7rem;
            text-decoration: none;
            color: white;
            font-size: 1rem;
        }

        .nav-bar li a:hover {
            background-color: white;
            color: #1f1f38;
            border-radius: 10px;
            transition: all ease-out;
            transition-duration: 0.4s;
        }

        #check {
            display: none;
        }

        .checkbtn {
            display: none;
        }


        /* Dropdown styles */

        .dropbtn {
            text-decoration: none;
            color: white;
            transition: background-color 0.4s ease, color 0.4s ease;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #1f1f38;
            z-index: 1;
            font-size: 20px;
            border-radius: 10px;
        }
    </style>
    <link rel="stylesheet" media="screen and (max-width: 700px)" href="responsive.css">
</head>

<body>
    <section class="nav-bar" id="nav-bar">
        <div class="left-name">
            <h1 class="name">Shortner</h1>
        </div>
        <input type="checkbox" id="check">
        <label class="checkbtn" for="check">
            <i class="fa fa-bars"></i>
        </label>
        <nav class="right-nav">
            <li><a href="/mylinks">Home</a></li>
            <li><a href="/logout">logout</a></li>
            <li class="dropdown">
                <a href="#" class="dropbtn" id="drpbtn">Settings <i class="fa fa-caret-down"></i></a>
                <div class="dropdown-content" id="dropdown-content">
                    <a href="/deleteaccount">Delete Account</a>
                </div>
            </li>

        </nav>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
    <script src="https://kit.fontawesome.com/a894369998.js" crossorigin="anonymous"></script>
    <script>
        const dropdown = document.getElementById('drpbtn')
        const drpcontent = document.getElementById('dropdown-content')
        let isHidden = true;

        dropdown.addEventListener('click', () => {
            if (isHidden) {
                drpcontent.style.display = 'block';
            } else {
                drpcontent.style.display = 'none';
            }
            isHidden = !isHidden;
        });
    </script>
</body>

</html>